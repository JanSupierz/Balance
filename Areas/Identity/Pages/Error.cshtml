@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card card-clean shadow-sm border border-danger">
                <div class="card-body p-5 text-center">

                    <div class="mb-4">
                        <div class="icon-circle lg theme-danger mx-auto shadow-sm" style="width: 80px; height: 80px;">
                            <i class="bi bi-exclamation-octagon-fill fs-1"></i>
                        </div>
                    </div>

                    <h2 class="fw-bold mb-3" style="color: var(--danger-text);">@ViewData["Title"]</h2>
                    <p class="text-muted mb-4 fs-5">
                        An error occurred while processing your request.
                    </p>

                    @if (Model.ShowRequestId)
                    {
                        <div class="p-3 rounded-3 mb-4 text-start border" style="background-color: var(--danger-soft);">
                            <label class="d-block text-uppercase fw-bold small mb-1" style="color: var(--danger-text); letter-spacing: 0.5px;">
                                Request ID
                            </label>
                            <code class="fs-5 fw-bold" style="color: var(--text-main);">@Model.RequestId</code>
                        </div>
                    }

                    <div class="alert alert-warning border-0 shadow-sm rounded-3 text-start small mb-4">
                        <div class="d-flex">
                            <i class="bi bi-cone-striped fs-4 me-3"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Development Mode</h6>
                                <p class="mb-2">
                                    Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
                                </p>
                                <p class="mb-0 text-muted fst-italic">
                                    <strong>Note:</strong> Do not enable Development environment in deployed applications.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-light border btn-pill-action py-2">
                            <i class="bi bi-arrow-left me-2"></i>Return Home
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>