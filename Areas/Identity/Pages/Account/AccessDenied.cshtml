@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-clean shadow-sm border border-danger">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="icon-circle lg theme-danger mx-auto shadow-sm" style="width: 80px; height: 80px;">
                        <i class="bi bi-shield-x-fill fs-1"></i>
                    </div>
                </div>

                <h2 class="fw-bold mb-3" style="color: var(--danger-text);">@ViewData["Title"]</h2>

                <p class="text-muted mb-4">
                    You do not have permission to access this resource. If you believe this is an error, please contact support.
                </p>

                <div class="d-grid gap-2">
                    <a href="/" class="btn btn-light border btn-pill-action">
                        <i class="bi bi-house me-2"></i>Return Home
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>