@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-clean shadow-sm border">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="icon-circle lg theme-success mx-auto shadow-sm">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                </div>

                <h2 class="fw-bold mb-3" style="color: var(--text-main);">@ViewData["Title"]</h2>

                <div class="mb-4 text-start">
                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                </div>

                <div class="d-grid gap-2">
                    <a asp-page="./Login" class="btn btn-primary btn-pill-action shadow-sm fw-bold">
                        Log In
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>