@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-5">
        <div class="card card-clean shadow-sm border">
            <div class="card-body p-4 p-md-5">

                <div class="text-center mb-4">
                    <div class="icon-circle lg theme-primary mx-auto mb-3 shadow-sm">
                        <i class="bi bi-person-plus-fill"></i>
                    </div>
                    <h2 class="fw-bold" style="color: var(--text-main);">@ViewData["Title"]</h2>
                    <p class="text-muted">Join us today.</p>
                </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm rounded-3 mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email Address</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-primary btn-lg btn-pill-action shadow-sm fw-bold">
                        Register
                    </button>
                </form>

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="position-relative my-4">
                        <hr class="text-muted opacity-25">
                        <span class="position-absolute top-50 start-50 translate-middle px-3 small text-muted fw-bold" style="background-color: var(--bg-surface);">OR</span>
                    </div>

                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                        <div class="d-grid gap-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-light border btn-pill-action" name="provider" value="@provider.Name">
                                    Continue with @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }

                <div class="text-center mt-4">
                    <p class="text-muted small">
                        Already have an account? <a asp-page="./Login" class="text-decoration-none fw-bold" style="color: var(--primary-base);">Log in</a>
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}