@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Manage your external logins";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<h4 class="fw-bold mb-4" style="color: var(--primary-base);">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="card card-clean p-4 shadow-sm border">

    @if (Model.CurrentLogins?.Count > 0)
    {
        <h5 class="fw-bold mb-3">Registered Logins</h5>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" style="color: var(--text-main);">
                <thead>
                    <tr style="background-color: var(--primary-soft);">
                        <th class="py-3 ps-3">Provider</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var login in Model.CurrentLogins)
                    {
                        <tr style="border-color: var(--border-color);">
                            <td id="@($"login-provider-{login.LoginProvider}")" class="py-3 ps-3 fw-bold">@login.ProviderDisplayName</td>
                            <td class="text-end pe-3">
                                @if (Model.ShowRemoveButton)
                                {
                                    <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post">
                                        <div>
                                            <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                            <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                            <button type="submit" class="btn btn-sm btn-soft-danger px-3 rounded-pill" title="Remove this @login.ProviderDisplayName login from your account">
                                                Remove
                                            </button>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <span class="small text-muted">Primary Login</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (Model.OtherLogins?.Count > 0)
    {
        <h5 class="fw-bold mt-4 mb-3">Add another service to log in.</h5>

        <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="form-horizontal">
            <div id="socialLoginList" class="d-flex flex-wrap gap-2">
                @foreach (var provider in Model.OtherLogins)
                {
                    <button id="@($"link-login-button-{provider.Name}")" type="submit" class="btn btn-outline-primary btn-pill-action" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                        <i class="bi bi-link me-1"></i> @provider.DisplayName
                    </button>
                }
            </div>
        </form>
    }
</div>