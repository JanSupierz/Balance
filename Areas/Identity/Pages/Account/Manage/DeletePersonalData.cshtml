@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4 class="fw-bold mb-4" style="color: var(--primary-base);">@ViewData["Title"]</h4>

<div class="card card-clean p-4 shadow-sm border">

    <div class="alert alert-danger border-0 p-3 mb-4" role="alert" style="background-color: var(--danger-soft);">
        <p class="mb-0">
            <i class="bi bi-exclamation-triangle-fill me-2" style="color: var(--danger-text);"></i>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
    </div>

    <div>
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 p-2 small" role="alert"></div>

            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-4">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }

            <button class="w-100 btn btn-lg btn-danger btn-pill-action" type="submit">Delete data and close my account</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}