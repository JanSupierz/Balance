@using Balance.Models
@using Microsoft.AspNetCore.Identity

@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<h2 class="fw-bold mb-4">Account Settings</h2>

<div class="card card-clean p-4 shadow-sm border">

    <h4 class="fw-bold mb-3" style="color: var(--primary-base);">Manage Account Details</h4>
    <hr class="mt-0" style="border-color: var(--border-color);" />

    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>

        <div class="col-md-9">
            <div class="ps-md-4">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}