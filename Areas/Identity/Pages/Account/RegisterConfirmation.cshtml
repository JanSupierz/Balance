@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register Confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-clean shadow-sm border">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="icon-circle lg theme-primary mx-auto shadow-sm" style="width: 80px; height: 80px;">
                        <i class="bi bi-envelope-check-fill fs-1"></i>
                    </div>
                </div>

                <h2 class="fw-bold mb-3" style="color: var(--text-main);">@ViewData["Title"]</h2>

                @if (Model.DisplayConfirmAccountLink)
                {
                    <div class="alert alert-warning border-0 shadow-sm rounded-3 text-start mb-4" role="alert">
                        <div class="d-flex">
                            <i class="bi bi-exclamation-triangle-fill fs-4 me-3 opacity-75"></i>
                            <div>
                                <strong>Dev Mode:</strong> This app does not have a real email sender registered.
                                <div class="small mt-1 opacity-75">
                                    See <a href="https://aka.ms/aspaccountconf" class="alert-link">docs</a> for configuration.
                                </div>
                            </div>
                        </div>
                    </div>

                    <p class="text-muted mb-4">
                        Normally this would be emailed, but you can click below to confirm:
                    </p>

                    <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary btn-pill-action px-4 py-2 shadow-sm fw-bold w-100">
                        <i class="bi bi-check-lg me-2"></i>Confirm Account
                    </a>
                }
                else
                {
                    <p class="text-muted mb-4 fs-5">
                        Please check your email to confirm your account.
                    </p>

                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-light border btn-pill-action">
                            <i class="bi bi-house me-2"></i>Return Home
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>