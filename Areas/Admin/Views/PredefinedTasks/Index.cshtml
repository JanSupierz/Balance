@model IEnumerable<Balance.Models.PredefinedTask>
@using Balance.Models.Enums

@{
    ViewData["Title"] = "Task Templates";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1 fw-bold">Task Templates</h2>
        <p class="text-muted mb-0">Global tasks that users can import.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm btn-pill-action">
        <i class="bi bi-plus-lg me-1"></i> New Template
    </a>
</div>

<div class="card card-clean shadow-sm border">
    <div class="table-responsive">
        <table class="table align-middle mb-0" style="color: var(--text-main);">
            <thead style="background-color: var(--primary-soft);">
                <tr>
                    <th class="ps-4 py-3">Task Details</th>
                    <th>Frequency</th>
                    <th>Points</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-color: var(--border-color);">
                        <td class="ps-4">
                            <div class="fw-bold">@item.Title</div>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <div class="text-muted small text-truncate" style="max-width: 250px;">@item.Description</div>
                            }
                        </td>
                        <td>
                            @{
                                var badgeClass = item.Frequency switch
                                {
                                    Frequency.Daily => "theme-primary",
                                    Frequency.Weekly => "theme-success",
                                    _ => "theme-warning"
                                };
                            }
                            <span class="badge @badgeClass rounded-pill px-3 py-2 fw-normal">
                                @item.Frequency
                            </span>
                            <span class="text-muted small ms-2">x @item.HowManyTimes</span>
                        </td>
                        <td>
                            <span class="fw-bold" style="color: var(--warning-text);">
                                <i class="bi bi-star-fill"></i> @item.PointsPerClick
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <div class="d-flex gap-2 justify-content-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light border" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border" title="Details">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-soft-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="icon-circle lg theme-primary mx-auto mb-3 opacity-50">
                <i class="bi bi-inbox"></i>
            </div>
            <p class="text-muted">No templates defined yet.</p>
            <a asp-action="Create" class="btn btn-sm btn-outline-primary mt-2">Create First Template</a>
        </div>
    }
</div>