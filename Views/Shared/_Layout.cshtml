@using Microsoft.AspNetCore.Identity
@using Balance.Models

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    // 1. Fetch User Data
    ApplicationUser? currentUser = null;
    if (SignInManager.IsSignedIn(User))
    {
        currentUser = await UserManager.GetUserAsync(User);
    }

    // 2. Determine Current Location for Active Tabs
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Balance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Balance.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <script>
        (function() {
            const savedTheme = localStorage.getItem('balance-theme');
            if (savedTheme && savedTheme !== 'default') {
                document.documentElement.setAttribute('data-theme', savedTheme);
            }
        })();
    </script>
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-sm navbar-theme shadow-sm fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-activity"></i> Balance
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(currentController == "UserTasks" ? "active fw-bold" : "")"
                                       asp-area="User" asp-controller="UserTasks" asp-action="Index">
                                        <i class="bi bi-check2-circle"></i> Tasks
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link @(currentController == "Prizes" ? "active fw-bold" : "")"
                                       asp-area="User" asp-controller="Prizes" asp-action="Index">
                                        <i class="bi bi-shop"></i> Shop
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle @(currentArea == "Admin" ? "active fw-bold" : "")"
                                       href="#" role="button" data-bs-toggle="dropdown">
                                        Admin
                                    </a>
                                    <ul class="dropdown-menu border-0 shadow">
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Users</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="PredefinedTasks" asp-action="Index">Templates</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item dropdown me-2">
                            <button class="btn btn-light btn-sm rounded-circle shadow-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="Change Theme">
                                <i class="bi bi-palette-fill" style="color: var(--primary-base);"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow" style="min-width: 200px; border-radius: 12px;">
                                <li><h6 class="dropdown-header">Select Theme</h6></li>
                                <li>
                                    <button class="dropdown-item d-flex align-items-center gap-2 py-2" onclick="setTheme('default')">
                                        <span class="d-inline-block rounded-circle" style="width:16px; height:16px; background:#2563eb;"></span>
                                        <span>Blue (Default)</span>
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item d-flex align-items-center gap-2 py-2" onclick="setTheme('dark')">
                                        <span class="d-inline-block rounded-circle" style="width:16px; height:16px; background:#0f172a; border: 1px solid #334155;"></span>
                                        <span>Dark Mode</span>
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item d-flex align-items-center gap-2 py-2" onclick="setTheme('pink')">
                                        <span class="d-inline-block rounded-circle" style="width:16px; height:16px; background:#db2777;"></span>
                                        <span>Pink</span>
                                    </button>
                                </li>
                            </ul>
                        </li>

                        @if (currentUser != null && User.IsInRole("User"))
                        {
                            bool isShopPage = currentController == "Prizes" && currentAction == "Index";

                            if (!isShopPage)
                            {
                                <li class="nav-item me-2">
                                    <a class="btn btn-sm btn-light fw-bold shadow-sm rounded-pill px-3"
                                       asp-area="User" asp-controller="Prizes" asp-action="Index"
                                       title="Go to Rewards Shop"
                                       id="nav-points-display-container">

                                        <i class="bi bi-star-fill text-warning"></i>
                                        <span id="nav-points-display">@currentUser.CurrentPoints</span>
                                    </a>
                                </li>
                            }
                        }

                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-fill site-main" style="padding-top: 80px; padding-bottom: 70px;">
        <div class="container mt-3">
            @RenderBody()
        </div>
    </main>

    <footer class="footer-theme py-3 mt-auto">
        <div class="container text-center small">
            &copy; 2025 - Balance - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>