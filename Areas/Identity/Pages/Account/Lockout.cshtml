@page
@model LockoutModel
@{
    ViewData["Title"] = "Account Locked";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-clean shadow-sm border border-danger">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="icon-circle lg theme-danger mx-auto shadow-sm" style="width: 80px; height: 80px;">
                        <i class="bi bi-slash-circle-fill fs-1"></i>
                    </div>
                </div>

                <h2 class="fw-bold mb-3 text-danger">@ViewData["Title"]</h2>

                <p class="text-muted mb-4">
                    This account has been locked due to too many invalid login attempts. Please try again later.
                </p>

                <a href="/" class="btn btn-light border btn-pill-action px-4">
                    Return Home
                </a>

            </div>
        </div>
    </div>
</div>