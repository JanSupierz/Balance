@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Check Your Email";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-clean shadow-sm border">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="icon-circle lg theme-primary mx-auto shadow-sm" style="width: 80px; height: 80px;">
                        <i class="bi bi-envelope-check-fill fs-1"></i>
                    </div>
                </div>

                <h2 class="fw-bold mb-3" style="color: var(--text-main);">Email Sent</h2>

                <p class="text-muted mb-4">
                    Please check your email to reset your password. If you don't see it, check your spam folder.
                </p>

                <a asp-page="./Login" class="btn btn-primary btn-pill-action px-5 shadow-sm fw-bold">
                    Back to Login
                </a>

            </div>
        </div>
    </div>
</div>