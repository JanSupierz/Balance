@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password?";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-clean shadow-sm border">
            <div class="card-body p-4 p-md-5">

                <div class="text-center mb-4">
                    <div class="icon-circle lg theme-primary mx-auto mb-3 shadow-sm">
                        <i class="bi bi-key-fill"></i>
                    </div>
                    <h2 class="fw-bold" style="color: var(--text-main);">Recovery</h2>
                    <p class="text-muted">Enter your email to reset your password.</p>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm rounded-3 mb-3 small" role="alert"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email Address</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-pill-action w-100 py-2 shadow-sm fw-bold">
                        Reset Password
                    </button>
                </form>

                <div class="text-center mt-4">
                    <a asp-page="./Login" class="text-decoration-none text-muted small">
                        <i class="bi bi-arrow-left me-1"></i> Back to Login
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}