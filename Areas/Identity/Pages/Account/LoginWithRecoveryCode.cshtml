@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery Code Verification";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-clean shadow-sm border">
            <div class="card-body p-4 p-md-5">

                <div class="text-center mb-4">
                    <div class="icon-circle lg theme-danger mx-auto mb-3 shadow-sm">
                        <i class="bi bi-shield-exclamation fs-1"></i>
                    </div>
                    <h2 class="fw-bold" style="color: var(--text-main);">Recovery Login</h2>
                    <p class="text-muted small mt-2">
                        You have requested to log in with a recovery code. This login will not be remembered until you provide an authenticator app code at log in or disable 2FA and log in again.
                    </p>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm rounded-3 mb-3" role="alert"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="RecoveryCode" />
                        <label asp-for="Input.RecoveryCode">Recovery Code</label>
                        <span asp-validation-for="Input.RecoveryCode" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-pill-action w-100 py-2 shadow-sm fw-bold">
                        <i class="bi bi-unlock-fill me-2"></i>Log in
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}