@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-clean shadow-sm border">
            <div class="card-body p-5 text-center">

                <div class="mb-4">
                    <div class="icon-circle lg theme-success mx-auto shadow-sm" style="width: 80px; height: 80px;">
                        <i class="bi bi-check-lg fs-1"></i>
                    </div>
                </div>

                <h2 class="fw-bold mb-3" style="color: var(--text-main);">Password Reset</h2>

                <p class="text-muted mb-4">
                    Your password has been successfully reset. You can now log in with your new credentials.
                </p>

                <a asp-page="./Login" class="btn btn-primary btn-pill-action px-5 py-2 shadow-sm fw-bold w-100">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Log In
                </a>

            </div>
        </div>
    </div>
</div>