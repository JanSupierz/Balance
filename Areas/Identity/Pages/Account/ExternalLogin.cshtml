@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card card-clean shadow-sm border">
            <div class="card-body p-4 p-md-5">

                <div class="text-center mb-4">
                    <div class="icon-circle lg theme-success mx-auto mb-3 shadow-sm">
                        <i class="bi bi-cloud-check-fill"></i>
                    </div>
                    <h2 class="fw-bold" style="color: var(--text-main);">Almost There!</h2>
                    <p class="text-muted">
                        You've successfully authenticated with <strong style="color: var(--primary-base);">@Model.ProviderDisplayName</strong>.
                    </p>
                </div>

                <div class="alert alert-success border-0 shadow-sm rounded-3 mb-4 small">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    Please enter an email address for this site below and click the Register button to finish logging in.
                </div>

                <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small" role="alert"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Please enter your email." />
                        <label asp-for="Input.Email">Email Address</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-pill-action w-100 py-2 shadow-sm fw-bold">
                        Complete Registration
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}