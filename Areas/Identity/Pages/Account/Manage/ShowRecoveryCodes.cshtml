@page
@model ShowRecoveryCodesModel
@{
    ViewData["Title"] = "Your Recovery Codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="card card-clean shadow-sm border">
    <div class="card-body p-4 p-md-5">

        <div class="d-flex align-items-center mb-4">
            <div class="icon-circle md theme-success me-3 shadow-sm">
                <i class="bi bi-key-fill"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0" style="color: var(--text-main);">@ViewData["Title"]</h4>
                <p class="text-muted small mb-0">Save these codes in a secure location.</p>
            </div>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" />

        <div class="alert alert-warning border-0 rounded-3 mb-4" role="alert" style="background-color: var(--warning-soft); color: var(--warning-text);">
            <i class="bi bi-exclamation-circle-fill me-2"></i>
            <strong>Important:</strong> If you lose your device, these codes are the only way to recover your account.
        </div>

        <div class="bg-light rounded-3 p-4 border text-center" style="background-color: var(--bg-app) !important; border-color: var(--border-color) !important;">
            <div class="row g-3 justify-content-center">
                @for (var row = 0; row < Model.RecoveryCodes.Length; row += 2)
                {
                    <div class="col-md-5">
                        <code class="fs-5 fw-bold d-block py-2 bg-white rounded border shadow-sm" style="color: var(--text-main);">@Model.RecoveryCodes[row]</code>
                    </div>
                    @if (row + 1 < Model.RecoveryCodes.Length)
                    {
                        <div class="col-md-5">
                            <code class="fs-5 fw-bold d-block py-2 bg-white rounded border shadow-sm" style="color: var(--text-main);">@Model.RecoveryCodes[row + 1]</code>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="text-center mt-4">
            <button onclick="window.print()" class="btn btn-light border btn-pill-action">
                <i class="bi bi-printer me-2"></i>Print Codes
            </button>
        </div>

    </div>
</div>