@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card card-clean shadow-sm border">
            <div class="card-body p-4 p-md-5">

                <div class="text-center mb-4">
                    <div class="icon-circle lg theme-primary mx-auto mb-3 shadow-sm">
                        <i class="bi bi-shield-lock-fill"></i>
                    </div>
                    <h2 class="fw-bold" style="color: var(--text-main);">Two-Factor Auth</h2>
                    <p class="text-muted small">
                        Your login is protected. Enter the code from your authenticator app.
                    </p>
                </div>

                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <input asp-for="RememberMe" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm rounded-3 mb-3 small" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" placeholder="Code" />
                        <label asp-for="Input.TwoFactorCode">Authenticator Code</label>
                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="Input.RememberMachine" class="form-check-input" />
                        <label asp-for="Input.RememberMachine" class="form-check-label text-muted">
                            @Html.DisplayNameFor(m => m.Input.RememberMachine)
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-pill-action w-100 py-2 shadow-sm fw-bold">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Log in
                    </button>
                </form>

                <div class="text-center mt-4 pt-3 border-top">
                    <p class="text-muted small mb-2">Don't have your device?</p>
                    <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-sm btn-light border rounded-pill">
                        Use Recovery Code
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}