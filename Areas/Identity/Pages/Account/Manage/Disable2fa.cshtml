@page
@model Disable2faModel
@{
    ViewData["Title"] = "Disable 2FA";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="card card-clean shadow-sm border border-danger">
    <div class="card-body p-4 p-md-5 text-center">

        <div class="mb-4">
            <div class="icon-circle lg theme-danger mx-auto shadow-sm">
                <i class="bi bi-shield-slash-fill fs-2"></i>
            </div>
        </div>

        <h4 class="fw-bold mb-3" style="color: var(--text-main);">Disable Two-Factor Authentication?</h4>
        <partial name="_StatusMessage" for="StatusMessage" />

        <p class="text-muted mb-4">
            Disabling 2FA removes an extra layer of security from your account. Are you sure you want to proceed?
        </p>

        <div class="alert alert-warning border-0 rounded-3 text-start mb-4 mx-auto" style="max-width: 500px; background-color: var(--warning-soft); color: var(--warning-text);">
            <div class="d-flex">
                <i class="bi bi-info-circle-fill fs-5 me-3"></i>
                <div class="small">
                    <strong>Note:</strong> This does not reset your authenticator app keys. If you want to change keys, please <a asp-page="./ResetAuthenticator" class="fw-bold text-decoration-underline" style="color: inherit;">reset your authenticator</a> instead.
                </div>
            </div>
        </div>

        <form method="post">
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-page="./TwoFactorAuthentication" class="btn btn-light border btn-pill-action px-4">Cancel</a>
                <button class="btn btn-danger btn-pill-action px-5 shadow-sm fw-bold" type="submit">
                    Yes, Disable 2FA
                </button>
            </div>
        </form>

    </div>
</div>