@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card card-clean p-4 shadow-sm border">
                <h2 class="fw-bold mb-4" style="color: var(--primary-base);"><i class="bi bi-person-add me-2"></i>@ViewData["Title"]</h2>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <p class="text-muted mb-4">Create a new account.</p>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2 small" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn-pill-action">Register</button>
                </form>

                @* External Logins Section (Below the form) *@
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="mt-4 pt-3 border-top text-center">
                            <h5 class="fw-bold small text-muted text-uppercase mb-3">Or use another service</h5>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-sm btn-light border mx-1 mb-2" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                        @provider.DisplayName
                                    </button>
                                }
                            </form>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}