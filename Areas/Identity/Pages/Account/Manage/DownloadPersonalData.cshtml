@page
@model DownloadPersonalDataModel
@{
    ViewData["Title"] = "Download Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="card card-clean shadow-sm border">
    <div class="card-body p-4 p-md-5 text-center">

        <div class="mb-4">
            <div class="icon-circle lg theme-primary mx-auto shadow-sm">
                <i class="bi bi-cloud-download-fill"></i>
            </div>
        </div>

        <h2 class="fw-bold mb-3" style="color: var(--text-main);">@ViewData["Title"]</h2>

        <p class="text-muted mb-4">
            You can download a copy of your personal data stored by our service in JSON format.
        </p>

        <form method="post">
            <button class="btn btn-primary btn-pill-action px-5 py-2 shadow-sm fw-bold" type="submit">
                <i class="bi bi-file-earmark-arrow-down me-2"></i>Download JSON
            </button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}