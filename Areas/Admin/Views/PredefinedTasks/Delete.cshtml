@model Balance.Models.PredefinedTask
@using Balance.Models.Enums

@{
    ViewData["Title"] = "Delete Template";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card card-clean shadow-sm border">
                <div class="card-body p-5 text-center">

                    <div class="mb-4">
                        <div class="icon-circle lg theme-danger mx-auto">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </div>
                    </div>

                    <h3 class="fw-bold mb-2">Delete Template?</h3>
                    <p class="text-muted mb-4">
                        This will remove <strong>"@Model.Title"</strong> from the import list.<br>
                        Existing user tasks will <u>not</u> be affected.
                    </p>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-pill-action">
                                Yes, Delete Template
                            </button>
                            <a asp-action="Index" class="btn btn-light border btn-pill-action">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>