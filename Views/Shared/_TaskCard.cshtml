@using Balance.Models.Enums
@model Balance.Models.UserTask
@{
    var isCompleted = ViewData["IsCompleted"] as bool? ?? false;
    var now = DateTime.Now;

    // --- URGENCY LOGIC ---
    bool isUrgent = false;
    bool isOverdue = false;
    string timeLabel = "";
    string icon = "";
    string dateClass = "";

    if (Model.Frequency == Frequency.Daily)
    {
        timeLabel = "Ends Tonight";
        icon = "bi-sun";
    }
    else if (Model.Frequency == Frequency.Weekly)
    {
        timeLabel = "Ends Sunday";
        icon = "bi-calendar-week";
        if (now.DayOfWeek == DayOfWeek.Saturday || now.DayOfWeek == DayOfWeek.Sunday) { isUrgent = true; }
    }
    else // OneTime
    {
        timeLabel = Model.Deadline.ToString("MMM dd");
        icon = "bi-calendar-event";

        if (!isCompleted)
        {
            if (now > Model.Deadline)
            {
                isOverdue = true;
                timeLabel = "Overdue: " + timeLabel;
                icon = "bi-exclamation-triangle-fill";
            }
            else if ((Model.Deadline - now).TotalDays <= 1)
            {
                isUrgent = true;
            }
        }
    }

    // Border Priority
    var borderClass = "";
    if (isCompleted)
    {
        borderClass = ""; // No border color for completed
    }
    else if (isOverdue)
    {
        borderClass = "border-danger border-2";
        dateClass = "text-danger fw-bold";
    }
    else if (isUrgent)
    {
        borderClass = "border-warning border-2";
        dateClass = "text-warning fw-bold";
    }

    var progressPercent = Model.HowManyTimes > 0
        ? (double)Model.CompletedCount / Model.HowManyTimes * 100
        : 0;
}

<div class="card h-100 shadow-sm @borderClass">
    <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h5 class="card-title mb-0">
                @Model.Title
                <span class="badge ms-1 completed-label @(isCompleted ? "bg-success" : "bg-primary-theme")">
                    @Model.CompletedCount/@Model.HowManyTimes
                </span>
            </h5>
            @await Html.PartialAsync("_TaskDropdown", Model)
        </div>

        @if (Model.Tags != null && Model.Tags.Any())
        {
            <div class="mb-2">
                @foreach (var tag in Model.Tags)
                {
                    <span class="badge rounded-pill me-1 badge-tag"
                          style="font-size: 0.75rem; background-color: @tag.Color;">
                        @tag.Name
                    </span>
                }
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text text-muted small mb-3">@Model.Description</p>
        }

        <div class="mt-auto">
            <div class="d-flex justify-content-between small text-muted mb-2 date-display">
                <span><i class="bi bi-repeat me-1"></i>@Model.Frequency</span>

                @if (isCompleted && Model.CompletedAt.HasValue)
                {
                    <span class="text-success completion-date">
                        <i class="bi bi-check2-circle me-1"></i>@Model.CompletedAt.Value.ToString("ddd, HH:mm")
                    </span>
                }
                else if (!isCompleted)
                {
                    <span class="@dateClass">
                        <i class="bi @icon me-1"></i>@timeLabel
                    </span>
                }
            </div>

            <div class="progress flex-grow-1 mb-2 shadow-sm" style="height: 10px; background-color: var(--border-color);">
                <div class="progress-bar @(isCompleted ? "bg-success" : "progress-bar-striped progress-bar-animated " + (isOverdue ? "bg-danger" : "bg-primary-theme"))"
                     role="progressbar"
                     style="width: @progressPercent%; transition: width 0.4s cubic-bezier(0.25, 1, 0.5, 1);">
                </div>
            </div>

            <div class="mt-2 button-container">
                @if (!isCompleted)
                {
                    var btnClass = isOverdue ? "btn-outline-danger" : "btn-primary";

                    <button type="button" class="btn btn-sm btn-complete @btnClass w-100 shadow-sm d-flex align-items-center justify-content-between ps-3 pe-2 py-2" style="transition: all 0.3s ease;">
                        <span class="fw-bold"><i class="bi bi-check-lg me-1"></i>Check In</span>

                        <span class="badge rounded-pill d-flex align-items-center"
                              style="background-color: var(--bg-surface); color: var(--text-main); border: 1px solid rgba(0,0,0,0.1);"
                              title="You earn @Model.PointsPerClick points for this action">
                            +@Model.PointsPerClick <i class="bi bi-star-fill text-warning ms-1"></i>
                        </span>
                    </button>
                }
                else
                {
                    <div class="text-center py-2">
                        <span class="text-success fw-bold"><i class="bi bi-check2-all me-1"></i>Completed</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>