@{
    ViewData["Title"] = "Home";

    // Determine roles upfront for cleaner logic
    bool isUser = User.IsInRole("User");
    bool isAdmin = User.IsInRole("Admin");
}

@if (!User.Identity.IsAuthenticated)
{
    /* --- GUEST VIEW (Marketing) --- */
    <div class="hero-section text-center">
        <div class="container">
            <div class="mb-4">
                <span class="badge rounded-pill fw-normal px-3 py-2 theme-primary">
                    ✨ Your Daily Habits, Simplified
                </span>
            </div>
            <h1 class="display-4 fw-bold mb-4">
                Find your <span class="text-gradient">Balance</span>.
            </h1>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <p class="lead text-muted mb-5">
                        Track your daily habits, manage repeated tasks, and build consistency.
                    </p>
                </div>
            </div>
            <div class="d-flex gap-3 justify-content-center">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-5 shadow-sm rounded-pill">Get Started</a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-light btn-lg px-5 rounded-pill">Log In</a>
            </div>
        </div>
    </div>

    <div class="row g-4 py-4">
        <div class="col-md-4">
            <div class="p-4 card h-100">
                <div class="mb-3 text-primary"><i class="bi bi-repeat fs-2"></i></div>
                <h5>Daily & Weekly</h5>
                <p class="text-muted mb-0">Tasks that intelligently reset based on your schedule.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 card h-100">
                <div class="mb-3 text-success"><i class="bi bi-tags fs-2"></i></div>
                <h5>Smart Tagging</h5>
                <p class="text-muted mb-0">Organize your life with color-coded custom tags.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 card h-100">
                <div class="mb-3 text-warning"><i class="bi bi-trophy fs-2"></i></div>
                <h5>Gamified Points</h5>
                <p class="text-muted mb-0">Earn points for every completion.</p>
            </div>
        </div>
    </div>
}
else
{
    /* --- LOGGED IN DASHBOARD --- */
    <div class="container py-4">

        <div class="d-flex align-items-center justify-content-between mb-5">
            <div>
                <h2 class="fw-bold mb-1">Hello, @User.Identity.Name! 👋</h2>
                <p class="text-muted mb-0">Here is what's happening today.</p>
            </div>
            <div class="text-end d-none d-md-block">
                <div class="text-muted small text-uppercase fw-bold">Today is</div>
                <div class="fs-5 fw-bold">@DateTime.Now.ToString("dddd, MMMM dd")</div>
            </div>
        </div>

        <div class="row g-4">

            @if (isUser)
            {
                <div class="col-12">
                    <a asp-area="User" asp-controller="UserTasks" asp-action="Index" class="action-card p-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="d-flex align-items-center mb-3">
                                    <div class="icon-box theme-primary mb-0 me-3">
                                        <i class="bi bi-check2-circle" style="color: var(--primary-base);"></i>
                                    </div>
                                    <h3 class="fw-bold mb-0">My Tasks</h3>
                                </div>
                                <p class="text-muted mb-4" style="max-width: 500px;">View your active habits, track progress, and log completions for today.</p>
                                <span class="btn btn-primary rounded-pill px-4">
                                    Go to Tasks <i class="bi bi-arrow-right ms-2"></i>
                                </span>
                            </div>
                            <div class="opacity-25 d-none d-md-block pe-5">
                                <i class="bi bi-list-check" style="font-size: 6rem; color: var(--primary-base);"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-6">
                    <a asp-area="User" asp-controller="Prizes" asp-action="Index" class="action-card p-4">
                        <div class="d-flex align-items-center h-100">
                            <div class="icon-box theme-warning mb-0 me-4 flex-shrink-0">
                                <i class="bi bi-gift-fill"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">Rewards Shop</h5>
                                <p class="text-muted small mb-0">Spend your points on custom rewards.</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-6">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="action-card p-4">
                        <div class="d-flex align-items-center h-100">
                            <div class="icon-box theme-primary mb-0 me-4 flex-shrink-0">
                                <i class="bi bi-person-gear" style="color: var(--primary-base);"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">Profile Settings</h5>
                                <p class="text-muted small mb-0">Manage your account and preferences.</p>
                            </div>
                        </div>
                    </a>
                </div>
            }

            @if (isAdmin)
            {
                // Visual Divider if user has both roles
                if (isUser)
                {
                    <div class="col-12 mt-5">
                        <div class="d-flex align-items-center">
                            <span class="text-uppercase text-muted fw-bold small me-3">Admin Controls</span>
                            <div class="flex-grow-1 border-bottom"></div>
                        </div>
                    </div>
                }

                <div class="col-md-6">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="action-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="icon-box theme-secondary mb-0 me-4 flex-shrink-0">
                                <i class="bi bi-people-fill"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">User Management</h5>
                                <p class="text-muted small mb-0">Assign roles, view activity, and manage access.</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-6">
                    <a asp-area="Admin" asp-controller="PredefinedTasks" asp-action="Index" class="action-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="icon-box theme-success mb-0 me-4 flex-shrink-0">
                                <i class="bi bi-collection-fill"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">Task Templates</h5>
                                <p class="text-muted small mb-0">Create and manage global predefined tasks.</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
}