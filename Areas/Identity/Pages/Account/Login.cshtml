@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card card-clean p-4 shadow-sm border">
                <h2 class="fw-bold mb-4" style="color: var(--primary-base);"><i class="bi bi-box-arrow-in-right me-2"></i>@ViewData["Title"]</h2>

                <section>
                    <form id="account" method="post">
                        <p class="text-muted mb-4">Use a local account to log in.</p>

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2 small" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="checkbox mb-4">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn-pill-action">Log in</button>
                        </div>

                        <div class="mt-4 text-center">
                            <p class="mb-1">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-muted small">Forgot your password?</a>
                            </p>
                            <p class="mb-1">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="small" style="color: var(--primary-base);">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted small">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>

            @* Optional: External Logins (Below the main card) *@
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="mt-4 p-3 card border text-center shadow-sm" style="background-color: var(--bg-surface);">
                    <h5 class="fw-bold">Or log in with:</h5>
                    <hr class="my-3" />
                    <section>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-primary btn-pill-action mx-1 mb-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    <i class="bi bi-box-arrow-in-right"></i> @provider.DisplayName
                                </button>
                            }
                        </form>
                    </section>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}