@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate Recovery Codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="card card-clean shadow-sm border">
    <div class="card-body p-4 p-md-5 text-center">

        <div class="mb-4">
            <div class="icon-circle lg theme-warning mx-auto shadow-sm">
                <i class="bi bi-shield-exclamation fs-2"></i>
            </div>
        </div>

        <h4 class="fw-bold mb-3" style="color: var(--text-main);">Generate New Codes?</h4>
        <partial name="_StatusMessage" for="StatusMessage" />

        <div class="alert alert-warning border-0 rounded-3 text-start mb-4" role="alert" style="background-color: var(--warning-soft); color: var(--warning-text);">
            <div class="d-flex">
                <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                <div>
                    <strong>Warning:</strong> This action will invalidate any existing recovery codes.
                    <p class="mb-0 mt-1 small opacity-75">
                        If you lose your device and don't have these new codes, you will lose access to your account.
                    </p>
                </div>
            </div>
        </div>

        <p class="text-muted small mb-4">
            Note: This does not affect your authenticator app keys. To reset those, use <a asp-page="./ResetAuthenticator" class="fw-bold text-decoration-underline" style="color: var(--warning-text);">Reset Authenticator</a>.
        </p>

        <form method="post">
            <button class="btn btn-danger btn-pill-action px-5 py-2 shadow-sm fw-bold" type="submit">
                Generate Codes
            </button>
        </form>

    </div>
</div>