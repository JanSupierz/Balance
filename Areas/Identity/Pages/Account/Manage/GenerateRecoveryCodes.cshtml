@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h4 class="fw-bold mb-4" style="color: var(--primary-base);">@ViewData["Title"]</h4>

<div class="card card-clean p-4 shadow-sm border">

    <div class="alert border-0 p-3 mb-4" role="alert" style="background-color: var(--warning-soft);">
        <p class="mb-2 fw-bold" style="color: var(--warning-text);">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Put these codes in a safe place.</strong>
        </p>
        <p class="small text-muted mb-2">
            If you lose your device and don't have the recovery codes you will lose access to your account.
        </p>
        <p class="mb-0 small text-muted">
            Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key
            used in an authenticator app you should <a asp-page="./ResetAuthenticator" style="color: var(--warning-text);">reset your authenticator keys.</a>
        </p>
    </div>

    <div>
        <form method="post">
            <button class="btn btn-danger btn-pill-action px-5" type="submit">
                Generate Recovery Codes
            </button>
        </form>
    </div>
</div>